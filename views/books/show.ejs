<h1 class="center">Course Data for
  <%= book.title %>
</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <td>
      <%= book.title %>
    </td>
  </tr>
  <tr>
    <th>Description</th>
    <td>
      <%= book.description%>
    </td>
  </tr>
  <tr>
    <th>Max Students</th>
    <td>
      <%= book.maxStudents%>
    </td>
  </tr>
  <tr>
    <th>Cost</th>
    <td>$
      <%= book.cost%>
    </td>
  </tr>
</table>


<div>
  <a class="button" href="<%=`/books/${book._id}/edit`%>">
    Edit Course Details
  </a>
</div>
<div>
  <a class="button" href="<%= `/books/${book._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
</div>
<div>
  <a class="button" href="/books">View all courses</a>
</div>
